@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Книжный магазин</title>
</head>
<body>
    <div>
        <h3>Распродажа книг</h3>
        <table>
            <tr>
                <td><p>Название книги</p></td>
                <td><p>Автор</p></td>
                <td><p>Цена</p></td>
                <td></td>
            </tr>
            @foreach (var element in ViewBag.Books)
            {
                <tr>
                    <td><p>@element.Name</p></td>
                    <td><p>@element.Author</p></td>
                    <td><p>@element.Price</p></td>
                    <td><p><a href="/Home/Buy/@element.Id">Купить</a></p></td>
                </tr>
            }
        </table>
    </div>
</body>
</html>